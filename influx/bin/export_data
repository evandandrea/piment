#!/bin/bash

host=localhost
port=8088

echo -n "waiting for TCP connection to $host:$port..."

while ! nc -w 1 $host $port 2>/dev/null
do
  echo -n .
  sleep 1
done

echo 'InfluxDB available'

while true; do
    if ping -c 1 haag.artes.si &> /dev/null
	then
	  ssh -R 9098:$host:$port influxdb@haag.artes.si -p 65022 /usr/local/bin/import-influx
	fi
    echo 'Waiting'
    sleep 90m
done
